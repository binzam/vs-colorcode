{
  "name": "color-store",
  "displayName": "Color Store",
  "description": "A simple VS Code extension to save, organize, and preview your colors. Supports Tailwind CSS, custom projects, and live color previews.",
  "publisher": "binyam",
  "repository": {
    "type": "git",
    "url": "https://github.com/binzam/vs-colorcode.git"
  },
  "version": "0.0.1",
  "icon": "media/icons/color-store-logo.png",
  "galleryBanner.color": {
    "color": "#21314c",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Color Store",
      "properties": {
        "color-store.savedColors": {
          "type": "array",
          "default": [],
          "description": "Stores your collection of saved colors"
        },
        "color-store.projects": {
          "type": "array",
          "default": [],
          "description": "Stores your color projects"
        },
        "color-store.currentProjectId": {
          "type": "string",
          "default": "",
          "description": "Current active project ID"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "color-store",
          "title": "Color Store",
          "icon": "media/icons/icon.svg"
        }
      ]
    },
    "views": {
      "color-store": [
        {
          "id": "color-store-view",
          "name": "Color Store",
          "type": "webview",
          "icon": "media/icons/icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "color-store.previewColor",
        "title": "Preview Color",
        "category": "Color Store"
      },
      {
        "command": "color-store.createProject",
        "title": "Create New Project",
        "category": "Color Store"
      },
      {
        "command": "color-store.switchProject",
        "title": "Switch Project",
        "category": "Color Store"
      },
      {
        "command": "color-store.deleteProject",
        "title": "Delete Project",
        "category": "Color Store"
      },
      {
        "command": "color-store.showProjects",
        "title": "Show Projects",
        "category": "Color Store"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "color-store.createProject",
          "when": "view == color-store-view"
        },
        {
          "command": "color-store.showProjects",
          "when": "view == color-store-view"
        }
      ]
    },
    "keybindings": [
      {
        "command": "color-store.previewColor",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/tinycolor2": "^1.4.6",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "theme-colors": "^0.1.0",
    "tinycolor2": "^1.6.0"
  }
}
